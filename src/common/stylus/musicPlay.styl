.musicPlay
  .musicListPlay
    width: 100%;
    height: 60%;
    background-color: #fff;
    color: #262626;
    font-weight: bold;
    position: fixed;
    right: 0;
    bottom: 8%;
    //visibility: hidden;
    border-radius: 4% 4% 0 0;
    .musicListPlay_header
      box-sizing: border-box;
      width: 90%;
      height: 10%;
      margin: 5%;
      border-bottom: 2px solid #262626;
      div
        float:left
        width 80%;
        img
          width: 8%;
          vertical-align: middle;
      span.clear
        float: right;
    ul
      box-sizing: border-box;
      width: 100%;
      padding: 0 7%;
      overflow-y scroll
      height 79%
      li
        padding: 3% 0;
        border-bottom: 1px solid #a4a4a4;
        span:nth-of-type(1)
          color: #262626;
        span:nth-of-type(2)
          color: #262626;
        span:nth-of-type(3)
          color: #acacac;
        span:nth-of-type(4)
          color: #acacac;
        img
          width: 6%;
          float: right;
        img:nth-of-type(1)
          margin-left: 5%;
        img:nth-of-type(2)
          margin-left: 5%;
  .play
    box-sizing: border-box;
    width: 100%;
    height: 8%;
    background-image: linear-gradient(to bottom, #132245 20%, #2e2acb);
    position: fixed;
    bottom: 0;
    vertical-align: middle;
    img.runMV
      height: 80%;
      border-radius: 50%;
      margin: 1% 3% 1% 5%;
      float: left;
    div
      float: left;
      margin-top: 2%;
      span
        color: #fff;
        display block
        span
          display inline-block
    img.musiclist
      height: 60%;
      margin-top:2%;
      margin-right: 3%;
      float: right;
    img.musicrun
      height: 60%;
      margin-top: 2%;
      margin-right: 1%;
      float: right;
    .progressBar
      position: absolute;
      bottom: 0;
      width: 100%;
      height: 7%;
      background-color: #bababa;
      .progressContain
        background-color : #747474;
        height: 100%;
        position: absolute;
        top: -6px;
  .bottom
    width: 100%;
.visible
  display: none;
.block
  display: block;
