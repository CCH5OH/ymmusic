.banner
  width: 100%;
  position: relative;
  overflow hidden
  ul
    display: flex;
    position: relative;
    li
      img
        vertical-align: middle;
        width: 100%;
        overflow: hidden;
  div
    width:100%;
    text-align:center;
    position: absolute;
    bottom:2%;
    ol
      display: inline-block;
      list-style: none;
      li.bannerLi
        border: 2px solid #fff;
        margin: 0 4px;
        border-radius: 50%;
        float left
      li.current
        background-color: #07133B;
